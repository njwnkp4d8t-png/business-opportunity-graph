# ========================================
# Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your actual credentials.
# NEVER commit .env to version control!
#
#   cp .env.example .env
#
# The root .gitignore already excludes .env, and both:
#   - docker/run_docker.ps1
#   - docker/docker-compose.secrets.yml
# will load it and pass these values into the container.

# ===== Database Credentials =====

# PostgreSQL / PostGIS
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=business_opportunity_graph
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ===== API Keys =====

# OpenAI (for LLM enrichment and notebooks)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4.1
OPENAI_TIMEOUT=30

# ESRI ArcGIS (if using)
ESRI_API_KEY=your_esri_api_key_here

# Other API Keys
# MAPBOX_TOKEN=your_mapbox_token_here
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# ===== Application Settings =====

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Application secret key (generate with:
#   python -c "import secrets; print(secrets.token_hex(32))"
# )
SECRET_KEY=your_secret_key_here

# ===== Service URLs =====

# Backend API (if/when you add one)
API_BASE_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:8888

# ===== Logging =====

LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===== Security =====

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8888

# ===== Data & Exports =====

DATA_DIR=./data
EXPORT_DIR=./exports

