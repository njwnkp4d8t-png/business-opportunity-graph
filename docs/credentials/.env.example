# ========================================
# Environment Configuration Template
# ========================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# ===== Database Credentials =====

# PostgreSQL / PostGIS
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=business_opportunity_graph
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ===== API Keys =====

# OpenAI (for LLM enrichment)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_TIMEOUT=30

# ESRI ArcGIS (if using)
ESRI_API_KEY=your_esri_api_key_here

# Other API Keys
# MAPBOX_TOKEN=your_mapbox_token_here
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# ===== Application Settings =====

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Application secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# ===== Service URLs =====

# Backend API
API_BASE_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:5173

# ===== Logging =====

LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===== Security =====

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:8888

# JWT settings (if using authentication)
# JWT_SECRET_KEY=your_jwt_secret_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# ===== Data Sources =====

# Data directory
DATA_DIR=./data

# Export directory
EXPORT_DIR=./exports

# ===== Optional Services =====

# Redis (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_email_password_here

